<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.theappgineer.community_remote</id>

  <name>Community Remote</name>
  <summary>Roon control for family and friends</summary>

  <developer id="com.theappgineer">
    <name>The Appgineer</name>
  </developer>

  <url type="homepage">https://theappgineer.com/community_remote/</url>
  <url type="bugtracker">https://github.com/TheAppgineer/community_remote/issues</url>
  <url type="donation">https://buymeacoffee.com/theappgineer</url>
  <url type="vcs-browser">https://github.com/TheAppgineer/community_remote</url>
  <url type="contact">https://community.roonlabs.com/t/community-remote-for-linux-first-native-linux-gui-for-roon/274461</url>

  <metadata_license>MIT</metadata_license>
  <project_license>MIT</project_license>
  <content_rating type="oars-1.1" />

  <description>
    <p>
      Community Remote has a focus on use-cases not covered by the official Roon Remote.
      Linux support is the obvious one, others are access control, random album playback and more.
    </p>
  </description>

